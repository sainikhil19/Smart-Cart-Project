<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.sainikhil.smartcartproject.OrderActivity">

    <TextView
        android:id="@+id/orderheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:background="@drawable/special_outline"
        android:gravity="center"
        android:text="Order Details of \n"
        android:textSize="16dp"
        android:textStyle="italic"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/orderdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/special_outline"
        android:gravity="center"
        android:text="Order Info is \n"
        android:textSize="16dp"
        android:textStyle="italic"
        android:layout_marginTop="135dp"
        android:layout_below="@+id/orderheading"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/thankyou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderdetail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:textSize="16dp"
        android:textStyle="italic"
        android:gravity="center"
        android:padding="10dp"
        android:text=" Thank you !!" />
</RelativeLayout>
